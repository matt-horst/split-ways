package pages

import "github.com/matt-horst/split-ways/web/components"

templ Login() {
	<!DOCTYPE html>
	<html>
		@components.Head("SplitWays")
		<body>
			<main class="card" role="main">
				@components.Navbar(false)
				<h1>Login</h1>
				<form id="form">
					<input id="input-username" type="text" placeholder="username" required/>
					<input id="input-password" type="password" placeholder="password" required/>
					<button id="button-submit" type="submit">Login</button>
				</form>
				@components.Status()
			</main>
			<script src="/static/login.js" type="module"></script>
		</body>
	</html>
}
